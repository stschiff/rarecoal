                       split,
                       optparse-applicative < 0.11.0.2,
                       hslogger,
                       vector,
                       parallel,
                       hmatrix,
                       hmatrix-gsl,
                       MissingH,
                       either,
                       time,
                       random,
                       transformers,
                       ansi-terminal < 0.6.2.1,
                       storable-complex < 0.2.2,
                       errors,
                       tagged < 0.7.3,
                       parsec < 3.1.8,
                       transformers-compat < 0.4.0.4,
                       regex-compat < 0.95.1,
                       data-memocombinators,
                       monad-loops,
                       lens
  default-language:    Haskell2010
  extra-lib-dirs:      /usr/lib
  ghc-options:         -fno-ignore-asserts -rtsopts -threaded "-with-rtsopts=-A10m -K100m"
 
